<resources>

    <style name="Theme.Allsafe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/secondaryColor</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/secondaryColor</item>
    </style>

    <style name="Theme.Allsafe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Allsafe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Allsafe.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="DrawerMenuTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DrawerMenuDescriptionStyle">
        <item name="android:textColor">@color/drawerTextSecondary</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="NavigationViewStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">@style/NavigationMenuTextStyle</item>
    </style>

    <style name="NavigationMenuTextStyle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>