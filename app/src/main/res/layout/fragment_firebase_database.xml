<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Challenge Header Box -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/terminal_border"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_firebase"
                    app:tint="@color/secondaryColor" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Firebase Database"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Insecure rules leading to data exposure"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp"
                        android:fontFamily="monospace" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="[EASY]"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:background="@drawable/difficulty_badge_easy"
                    android:textColor="@color/difficultyEasy" />
            </LinearLayout>

        </LinearLayout>

        <!-- Challenge Number and Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:text="[CHALLENGE 05]"
            android:textColor="@color/secondaryColor"
            android:textSize="14sp"
            android:textStyle="normal"
            android:fontFamily="monospace"
            android:letterSpacing="0.2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="FIREBASE DATA EXPOSURE"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:gravity="center" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="40dp"
            android:background="@color/secondaryColor" />

        <!-- Mission Briefing -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:background="@drawable/terminal_border"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="MISSION BRIEFING"
                android:textColor="@color/secondaryColor"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:letterSpacing="0.1"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="In this task, the application is getting data from a realtime database. It's all nice and good but I have a feeling the developers didn't set the correct rules for production."
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="monospace"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/execute"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:text="[QUERY DATABASE]"
                android:textColor="@color/black"
                android:background="@color/secondaryColor"
                android:fontFamily="monospace"
                android:textSize="14sp"
                android:textStyle="normal"
                android:paddingHorizontal="24dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
